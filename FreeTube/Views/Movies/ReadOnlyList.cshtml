@model IEnumerable<FreeTube.Models.Movie>;

@{
	ViewBag.Title = "Movies";
}

<h2>Movies</h2>

<table id="movies" class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Movie</th>
			<th>Genre</th>
		</tr>
	</thead>
	<tbody>
	</tbody>
</table>

@section Scripts
{
	<script>
		$(document).ready(function () {
			var table = $("#movies").DataTable({
				ajax: {
					url: "/api/movies",
					dataSrc: ""
				},
				columns: [
					{
						data: "title"
					},
					{
						data: "genre.name"
					}
				]
			});
		});
	</script>
}









